{
  "manifest_version": 3,
  "version": "0.2.1",
  "name": "Better Lyrics",
  "description": "Better lyrics for YouTube Music | boidu.dev",
  "icons": {
    "16": "images/icons/icon_16.png",
    "48": "images/icons/icon_48.png"
  },
  "update_url": "https://clients2.google.com/service/update2/crx",
  "host_permissions": ["*://music.youtube.com/*"],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "Better Lyrics for YouTube Music | boidu.dev"
  },
  "content_scripts": [
    {
      "matches": ["*://music.youtube.com/*"],
      "js": ["src/index.js"],
      "css": ["src/index.css"]
    }
  ]
}
